# Ask for the administrator password upfront
sudo -v

# Update App Store apps
sudo softwareupdate -i -a

# Symlink dotfiles -> ~/
if [ -f ~/.dotfiles/.setup/.symlink ]; then
    source ~/.dotfiles/.setup/.symlink;
fi

# Source bash_profile to set aliases
if [ -f ~/.bash_profile ]; then
    source ~/.bash_profile;
fi

if [ -f ~/.install ]; then
    install;
fi

if [ -f ~/.brewshell ]; then
    brewshell;
fi

if [ -f ~/.update ]; then
    update;
fi

if [ -f ~/.clean ]; then
    clean;
fi

# # * will reboot once completed
if [ -f ~/.macos ]; then
    macos;
fi
