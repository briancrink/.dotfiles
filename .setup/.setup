# Ask for the administrator password upfront
sudo -v

# Update App Store apps
sudo softwareupdate -i -a

# Symlink dotfiles -> ~/
if [ -f ~/.dotfiles/setup/.symlink ]; then
    source ~/.dotfiles/setup/.symlink;
fi

# Source bash_profile to set aliases
if [ -f ~/.bash_profile ]; then
    source ~/.bash_profile;
fi

# (source ~/.install)
install

# (source ~/.brewshell)
brewshell

# (source ~/.update)
update

# (source ~/.clean)
clean

# (source ~/.macos)
# # * will reboot once completed
macos
