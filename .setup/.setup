# Update App Store apps
sudo softwareupdate -i -a

# Appends Homebrew <desired_shell> filepath to etc/shells to set as default
echo /usr/local/bin/bash | sudo tee -a /etc/shells

if [ -f ~/.dotfiles/.setup/.install ]; then
    source ~/.dotfiles/.setup/.install
fi

if [ -f ~/.dotfiles/.setup/.update ]; then
    source ~/.dotfiles/.setup/.update
fi

if [ -f ~/.dotfiles/.setup/.clean ]; then
    source~/.dotfiles/.setup/.clean
fi

