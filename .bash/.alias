#! /usr/local/bin/bash

# # * Directory
alias l="ls -la"       # List in long format, include dotfiles
alias ld="ls -ld */"    # List in long format, only directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias cd?='echo "Your current directory is $(pwd)"'

# # * Python
alias python=python3

# # * PlistBuddy
alias plistbuddy='rlwrap /usr/libexec/PlistBuddy'

# # * Shortcuts
alias %=battery

# # * Backup Homebrew packages
alias brewbun='brew bundle dump --force --file='$dot'/.brew/.Brewfile'

# # * Chrome New Tab Background
alias newtab='source '$dot'/.chrome/.default/.rsyncwallpaper.sh'

# # * Edit File in VS Code
alias calias='code '$HOME/'.alias'
alias cdict='code '$dot/'.dictionary/.dictionary'
alias cvar='code '$HOME/'.variable'
alias ckey='code '$dot/'.setup/readme.md'
alias cfun='code '$HOME/'.function'
alias c0='code '$sbdir/'session\ buddy.code-workspace'
alias c1='code '$sbdir/'index.txt'
alias c3='code '$sbdir/'concept.txt'
alias c2='code '$sbdir/'workflow.txt'
alias c4='code '$sbdir/'service.txt'


# # * Dotfile Scripts
alias clean='source $HOME/.clean'
alias macos='source $HOME/.macos'
alias flavour='source $HOME/.flavour'
alias zipdrive='source $HOME/.zipdrive'
alias zipdot='source $HOME/.zipdot'
alias update='source $HOME/.update'
alias backup='source $HOME/.backup'
alias rEFInd='source $HOME/.rEFInd'
alias symlink='source $HOME/.symlink'
alias sysprefs='source $HOME/.sysprefs'
alias brewshell='source $HOME/.brewshell'
alias bootstrap='source $HOME/.bootstrap'
alias reload='clear; source $HOME/.bash_profile'
alias sbrestore='source '$sbdir'/.sessionbuddy'
