#! /usr/local/bin/bash

# # * Directory
alias l="ls -la"       # List in long format, include dotfiles
alias ld="ls -ld */"    # List in long format, only directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias cd?='echo "Your current directory is $(pwd)"'

# # * Python
alias python=python3

# # * PlistBuddy
alias plistbuddy='rlwrap /usr/libexec/PlistBuddy'

# # * Shortcuts
alias %=battery

# # * Backup Homebrew packages
alias bundle='brew bundle dump --force --file=~/.dotfiles/.brew/.Brewfile'

# # * Chrome New Tab Background
alias newtab='source ~/.dotfiles/.chrome/.default/.rsyncwallpaper.sh'

# # * System Events
alias bootstrap='source ~/.bootstrap'
alias macos='source ~/.macos'
alias theme='source ~/.theme'
alias sysprefs='source ~/.sysprefs'
alias clean='source ~/.clean'
alias update='source ~/.update'
alias backup='source ~/.backup'
alias rEFInd='source ~/.rEFInd'
alias brewshell='source ~/.brewshell'
alias reload='source ~/.bash_profile'
alias symlink='source ~/.dotfiles/.setup/.symlink'
alias zipws='source ~/.dotfiles/.backup/.zipws'
alias zipdot='source ~/.dotfiles/.backup/.zipdot'
